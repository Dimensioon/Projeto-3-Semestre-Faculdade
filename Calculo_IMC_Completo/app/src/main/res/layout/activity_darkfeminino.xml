<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/MasculinotextViewNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:background="#4D555555"
        android:fontFamily="arial"
        android:textAlignment="center"
        android:textColor="#50C878"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MasculinotextViewPeso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#4D555555"
        android:fontFamily="arial"
        android:textAlignment="center"
        android:textColor="#50C878"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/MasculinotextViewNome"
        app:layout_constraintStart_toStartOf="@+id/MasculinotextViewNome"
        app:layout_constraintTop_toBottomOf="@+id/MasculinotextViewNome" />

    <TextView
        android:id="@+id/MasculinotextViewAltura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#4D555555"
        android:fontFamily="arial"
        android:textAlignment="center"
        android:textColor="#50C878"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/MasculinotextViewPeso"
        app:layout_constraintStart_toStartOf="@+id/MasculinotextViewPeso"
        app:layout_constraintTop_toBottomOf="@+id/MasculinotextViewPeso" />

    <TextView
        android:id="@+id/MasculinotextViewIMC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#4D555555"
        android:fontFamily="arial"
        android:textAlignment="center"
        android:textColor="#50C878"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/MasculinotextViewAltura"
        app:layout_constraintStart_toStartOf="@+id/MasculinotextViewAltura"
        app:layout_constraintTop_toBottomOf="@+id/MasculinotextViewAltura" />

    <TextView
        android:id="@+id/textViewResultadoFinal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#4D555555"
        android:fontFamily="arial"
        android:textAlignment="center"
        android:textColor="#50C878"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/MasculinotextViewIMC"
        app:layout_constraintStart_toStartOf="@+id/MasculinotextViewIMC"
        app:layout_constraintTop_toBottomOf="@+id/MasculinotextViewIMC" />

    <Button
        android:id="@+id/FemininobtVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="#4D555555"
        android:text="Voltar"
        android:textColor="#50C878"
        app:layout_constraintStart_toStartOf="@+id/textViewResultadoFinal"
        app:layout_constraintTop_toTopOf="@+id/FemininobtSair" />

    <Button
        android:id="@+id/FemininobtSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="#4D555555"
        android:text="Sair"
        android:textColor="#50C878"
        app:layout_constraintEnd_toEndOf="@+id/textViewResultadoFinal"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultadoFinal" />

</androidx.constraintlayout.widget.ConstraintLayout>